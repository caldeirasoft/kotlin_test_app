<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition app:constraintSetStart="@+id/podcastinfo_start"
                app:constraintSetEnd="@+id/podcastinfo_end"
                app:duration="500"
                motion:interpolator="linear">
        <OnSwipe
            app:touchAnchorId="@id/recyclerView"
            app:dragDirection="dragUp"
            app:touchAnchorSide="top"
            app:moveWhenScrollAtTop="true"/>

        <KeyFrameSet>
            <!-- move image behind background -->
            <KeyPosition
                app:target="@id/imageview_artwork"
                app:framePosition="10"
                app:percentY="0.4"
                app:keyPositionType="deltaRelative"/>

            <KeyAttribute
                app:target="@id/imageview_artwork"
                app:framePosition="11"
                android:elevation="0dp"/>

            <KeyPosition
                app:target="@id/imageview_artwork"
                app:framePosition="20"
                app:percentY="0.20"
                app:keyPositionType="deltaRelative"/>

            <KeyAttribute
                app:target="@id/imageview_artwork"
                app:framePosition="20"
                android:alpha="1"/>

            <KeyAttribute
                app:target="@id/imageview_artwork"
                app:framePosition="70"
                android:alpha="0"/>

            <KeyPosition
                app:target="@id/details_appbar"
                app:framePosition="80"
                app:percentY="1"
                app:keyPositionType="deltaRelative"/>

            <KeyAttribute
                app:target="@id/details_appbar"
                app:framePosition="80"
                android:alpha="0"/>

            <!--
            <KeyAttribute
                app:target="@id/imageview_artwork"
                app:framePosition="50"
                android:alpha="1"
                android:scaleX="1"
                android:scaleY="1"/>

            <KeyAttribute
                app:target="@id/imageview_artwork"
                app:framePosition="60"
                android:scaleX="0.5"
                android:scaleY="0.5"/>
                -->

        </KeyFrameSet>


    </Transition>

    <ConstraintSet android:id="@+id/podcastinfo_start">
        <Constraint
            android:id="@id/imageview_backbutton"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Constraint
            android:id="@id/imageview_artwork"
            android:layout_height="180dp"
            android:layout_width="180dp"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/layout_buttons"/>

        <Constraint
            android:id="@id/imageview_backdrop"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Constraint
            android:id="@id/view_backdrop_scrim"
            app:layout_constraintTop_toTopOf="@id/imageview_backdrop"
            app:layout_constraintBottom_toBottomOf="@id/imageview_backdrop"
            app:layout_constraintStart_toStartOf="@id/imageview_backdrop"
            app:layout_constraintEnd_toEndOf="@id/imageview_backdrop"
            android:alpha="0"/>

        <Constraint
            android:id="@id/layout_buttons"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_backdrop"/>

        <Constraint
            android:id="@id/details_appbar"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="0"/>

        <Constraint
            android:id="@id/textview_title"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_buttons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@id/textview_artist"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textview_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@id/linearLayout_description"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textview_artist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@id/appbar_title"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imageview_backbutton"
            app:layout_constraintTop_toTopOf="parent"
            android:alpha="0"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/podcastinfo_end">
        <Constraint
            android:id="@id/imageview_backbutton"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Constraint
            android:id="@id/imageview_artwork"
            android:layout_height="180dp"
            android:layout_width="180dp"
            android:elevation="0dp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageview_backdrop"/>

        <Constraint
            android:id="@id/imageview_backdrop"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_buttons"
            />

        <Constraint
            android:id="@id/view_backdrop_scrim"
            app:layout_constraintTop_toTopOf="@id/imageview_backdrop"
            app:layout_constraintBottom_toBottomOf="@id/imageview_backdrop"
            app:layout_constraintStart_toStartOf="@id/imageview_backdrop"
            app:layout_constraintEnd_toEndOf="@id/imageview_backdrop"
            android:alpha="0"/>

        <Constraint
            android:id="@id/layout_buttons"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textview_title"/>

        <Constraint
            android:id="@id/details_appbar"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="1"/>

        <Constraint
            android:id="@id/textview_title"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/textview_artist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@id/textview_artist"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/linearLayout_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@id/linearLayout_description"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/details_appbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </ConstraintSet>

</MotionScene>
