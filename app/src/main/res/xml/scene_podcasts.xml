<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@+id/scene_podcasts_start"
        app:constraintSetEnd="@+id/scene_podcasts_end">

        <KeyFrameSet>

            <KeyAttribute
                app:target="@id/layout_title"
                app:framePosition="50"
                android:alpha="1"/>

            <KeyAttribute
                app:target="@id/details_appbar"
                app:framePosition="80"
                android:alpha="0"/>

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/scene_podcasts_start">
        <Constraint
            android:id="@id/layout_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Constraint
            android:id="@id/details_appbar"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/layout_title"
            android:alpha="0"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/scene_podcasts_end">
        <Constraint
            android:id="@id/layout_title"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Constraint
            android:id="@id/details_appbar"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/layout_title"
            android:alpha="1"/>
    </ConstraintSet>
</MotionScene>
