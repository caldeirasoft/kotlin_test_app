<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition app:constraintSetStart="@+id/podcastinfo_start"
                app:constraintSetEnd="@+id/podcastinfo_end"
                app:duration="500"
                motion:interpolator="linear">
        <OnSwipe
            app:touchAnchorId="@id/recyclerView_podcastinfo"
            app:dragDirection="dragUp"
            app:touchAnchorSide="top"
            app:moveWhenScrollAtTop="true"/>

        <KeyFrameSet>
            <KeyPosition
                app:target="@id/imageview_artwork"
                app:framePosition="5"
                app:percentY="1"
                app:keyPositionType="deltaRelative"/>

            <KeyAttribute
                app:target="@id/imageview_artwork"
                app:framePosition="10"
                android:elevation="4dp"/>

            <KeyAttribute
                app:target="@id/imageview_artwork"
                app:framePosition="11"
                android:elevation="0dp"/>

        </KeyFrameSet>


    </Transition>

    <ConstraintSet android:id="@+id/podcastinfo_start">
        <Constraint
            android:id="@id/imageview_backdrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/details_appbar_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Constraint
            android:id="@id/view_backdrop_scrim"
            app:layout_constraintTop_toTopOf="@id/imageview_backdrop"
            app:layout_constraintBottom_toBottomOf="@id/imageview_backdrop"
            app:layout_constraintStart_toStartOf="@id/imageview_backdrop"
            app:layout_constraintEnd_toEndOf="@id/imageview_backdrop"
            android:alpha="0"/>

        <Constraint
            android:id="@id/layout_buttons"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_backdrop"/>

        <Constraint
            android:id="@id/imageview_artwork"
            android:layout_height="180dp"
            android:layout_width="180dp"
            android:elevation="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/layout_buttons"
            app:layout_constraintBottom_toTopOf="@id/textview_title"/>

        <Constraint
            android:id="@id/details_appbar_background"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textview_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/textview_title"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_buttons"
            app:layout_constraintBottom_toBottomOf="@id/details_appbar_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@id/textview_artist"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textview_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/podcastinfo_end">
        <Constraint
            android:id="@id/imageview_backdrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Constraint
            android:id="@id/view_backdrop_scrim"
            app:layout_constraintTop_toTopOf="@id/imageview_backdrop"
            app:layout_constraintBottom_toBottomOf="@id/imageview_backdrop"
            app:layout_constraintStart_toStartOf="@id/imageview_backdrop"
            app:layout_constraintEnd_toEndOf="@id/imageview_backdrop"
            android:alpha="1"/>

        <Constraint
            android:id="@id/imageview_artwork"
            app:layout_constraintTop_toBottomOf="@id/imageview_backdrop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:elevation="0dp"/>

        <Constraint
            android:id="@id/details_appbar_background"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="@id/recyclerView_podcastinfo"
            app:layout_constraintStart_toStartOf="@id/recyclerView_podcastinfo"
            app:layout_constraintTop_toBottomOf="@id/details_status_bar_anchor" />

        <Constraint
            android:id="@id/textview_title"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/details_appbar_background"
            app:layout_constraintEnd_toEndOf="@id/details_appbar_background"
            app:layout_constraintStart_toStartOf="@id/details_appbar_background"
            app:layout_constraintTop_toTopOf="@id/details_appbar_background"/>

        <Constraint
            android:id="@id/textview_artist"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textview_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </ConstraintSet>

</MotionScene>
