<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition app:constraintSetStart="@+id/podcastinfo_start"
                app:constraintSetEnd="@+id/podcastinfo_end"
                app:duration="500"
                motion:interpolator="linear">
        <OnSwipe
            app:touchAnchorId="@id/recyclerView_podcastinfo"
            app:dragDirection="dragUp"
            app:touchAnchorSide="top"/>

        <!--
        <KeyFrameSet>
            <KeyAttribute
                motion:target="@id/layout_header_podcastinfo"
                motion:framePosition="45"
                android:alpha="0"/>

            <KeyAttribute
                motion:target="@id/button_subscribe"
                motion:framePosition="45"
                android:alpha="0"/>

            <KeyAttribute
                motion:target="@id/toolbar_title"
                motion:framePosition="45"
                android:alpha="0"/>
        </KeyFrameSet>
        -->

    </Transition>

    <ConstraintSet android:id="@+id/podcastinfo_start">
       <Constraint
            android:id="@id/toolbar_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="320dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:alpha="1"/>

        <Constraint
            android:id="@id/layout_header_podcastinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/toolbar_divider"/>

        <Constraint
            android:id="@id/toolbar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageview_backbutton"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha="0"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/podcastinfo_end">
        <Constraint
            android:id="@id/toolbar_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_backbutton"
            android:alpha="1"/>

        <Constraint
            android:id="@id/layout_header_podcastinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/toolbar_divider"
            android:alpha="0"/>

        <Constraint
            android:id="@id/toolbar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageview_backbutton"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha="1"/>
    </ConstraintSet>

</MotionScene>
