<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <import type="android.view.View" />
    <variable
        name="podcast"
        type="com.caldeirasoft.basicapp.data.entity.Podcast"/>
    <variable
        name="episode"
        type="com.caldeirasoft.basicapp.data.entity.Episode"/>
    <variable
        name="handler"
        type="com.caldeirasoft.basicapp.ui.catalog.CatalogViewModel"/>
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/headerLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="8dp"
          android:paddingBottom="12dp"
          android:background="@color/dark_gray"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_row"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:contentDescription="_Thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="H,1:1"
            app:imageUrl="@{podcast.imageUrl}"
            android:background="@drawable/thumb_1_0" />

        <TextView
            android:id="@+id/podcastTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/img_row"
            app:layout_constraintTop_toTopOf="@id/img_row"
            android:text="@{podcast.title, default=`Default Title`}"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:ellipsize="end"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/podcastAuthors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/podcastTitle"
            app:layout_constraintTop_toBottomOf="@id/podcastTitle"
            android:text="@{podcast.authors, default=`Default Author`}"
            android:textSize="15sp"
            android:textColor="@color/light_gray"/>
      </androidx.constraintlayout.widget.ConstraintLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:orientation="vertical">

        <!-- last episode -->
        <TextView style="@style/HeaderTextStyle"
                  android:text="_Last episode"
                  android:textSize="15sp"/>

        <TextView android:id="@+id/podcastLastEpisode"
            android:layout_width="wrap_content"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:visibility="@{episode != null ? View.VISIBLE : View.GONE}"
            android:text="@{episode.title}"/>

        <TextView android:id="@+id/podcastLastEpisodeDate"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:visibility="@{episode != null ? View.VISIBLE : View.GONE}"
            android:text="@{episode.publishedFormat()}"/>

        <ProgressBar android:id="@+id/podcastLastEpisodeProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:visibility="@{episode != null ? View.GONE : View.VISIBLE}"/>

        <!-- separator -->
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"/>

        <!-- description -->
        <TextView style="@style/HeaderTextStyle"
            android:text="_Description" />

        <ProgressBar android:id="@+id/podcastDescriptionProgress"
                     style="?android:attr/progressBarStyle"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_gravity="center_horizontal"
                     android:progressDrawable="@drawable/circular_progress_bar"
                     android:visibility="@{handler.descriptionLoadingState == true ? View.VISIBLE : View.GONE}"/>

        <TextView android:id="@+id/podcastDescription"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:textAlignment="viewStart"
                  android:textSize="15sp"
                  android:text="@{podcast.description}"
                  android:visibility="@{handler.descriptionLoadingState == true ? View.GONE : View.VISIBLE}"/>
      </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSubscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@{podcast.isInDatabase ? @drawable/ic_check_24dp : @drawable/ic_add_24dp}"
        android:onClick="@{() -> handler.onPodcastSubscribe(podcast)}"
        app:layout_anchor="@id/headerLayout"
        app:layout_anchorGravity="bottom|end" />

  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>