<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.caldeirasoft.basicapp.ui.podcastinfo.PodcastInfoViewModel"/>
    </data>

    <LinearLayout
        android:id="@+id/linearLayout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.descriptionData == null}">
            <include layout="@layout/shimmer_item_podcast_description"/>
        </FrameLayout>

        <TextView
            android:id="@+id/podcastDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{viewModel.descriptionData}"
            android:layout_gravity="center_horizontal"
            android:textColor="#616161"
            android:textSize="@dimen/text_medium"
            android:fontFamily="sans-serif-light"
            android:visibility="@{viewModel.descriptionData != null}"
            />
    </LinearLayout>
</layout>