<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <import type="android.text.Html"/>
        <variable
            name="title"
            type="String"/>
        <variable
            name="imageUrl"
            type="String"/>
        <variable
            name="publishedDate"
            type="String"/>
        <variable
            name="duration"
            type="String"/>
        <variable
            name="onEpisodeClick"
            type="android.view.View.OnClickListener"/>
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_episodespodcast"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemEpisodeConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="@{onEpisodeClick}">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageview_thumbnail"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:contentDescription="@null"
                app:imageUrl="@{imageUrl}"
                android:src="@drawable/thumb_1_0"
                app:riv_border_color="@color/light_gray"
                app:riv_border_width="1dp"
                app:riv_corner_radius="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="W,1:1"/>

            <TextView android:id="@+id/textview_pubDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:text="@{publishedDate}"
                android:singleLine="true"
                android:textColor="#616161"
                android:textSize="12sp"
                android:textAllCaps="true"
                app:layout_constraintStart_toEndOf="@id/imageview_thumbnail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView android:id="@+id/textview_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:text="@{title}"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/textview_pubDate"
                app:layout_constraintTop_toBottomOf="@id/textview_pubDate"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView android:id="@+id/textview_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:scrollHorizontally="false"
                android:text="@{duration}"
                android:textSize="12sp"
                android:textColor="#616161"
                app:layout_constraintStart_toStartOf="@id/textview_pubDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_title"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!--TODO: android:text="@{Html.fromHtml(@string/concat_separator(episode.durationFormat(), episode.description), Html.TO_HTML_PARAGRAPH_LINES_CONSECUTIVE), default=`Description`}"-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>