<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <import type="android.text.Html"/>
        <variable
            name="episode"
            type="com.caldeirasoft.basicapp.data.entity.Episode"/>
    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_episodespodcast"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shp_card_edge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/itemEpisodeConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_episodePublished"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|fill_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!--
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:textDayOfMonth="@{episode.published}"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:textMonth="@{episode.published}"
                        android:textSize="@dimen/text_tiny"
                        android:textAllCaps="true"
                        android:textStyle="bold"/>
                        -->
                </LinearLayout>

                 <TextView android:id="@+id/episodeTitle"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:layout_marginStart="5dp"
                          android:layout_marginEnd="10dp"
                          app:layout_constraintStart_toEndOf="@id/ll_episodePublished"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintEnd_toStartOf="@id/buttonLayout"
                          android:text="@{episode.title, default=`Default Title`}"
                          android:textColor="#616161"
                          android:maxLines="2"
                          android:ellipsize="end"
                          android:textSize="16sp" />

                <TextView android:id="@+id/episodeDesc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:text="@{Html.fromHtml(@string/concat_separator(episode.duration, episode.description)), default=`Description`}"
                            android:textSize="12sp"
                            app:layout_constraintStart_toEndOf="@id/ll_episodePublished"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/episodeTitle"
                            app:layout_constraintEnd_toStartOf="@id/buttonLayout" />


                    <!--android:drawableLeft="@drawable/ic_today_12dp"
                                android:drawablePadding="2dp"
                                -->
                <LinearLayout
                    android:id="@+id/buttonLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/episodeDescLayout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageButton android:id="@+id/buttonInfo"
                                android:src="@drawable/ic_info_outline_24dp"
                                android:layout_margin="5dp"
                                android:layout_width="36dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:tint="@color/dark_gray"
                                style="?android:attr/borderlessButtonStyle"
                                android:scaleType="centerCrop"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:el_duration="300"
                app:el_expanded="false">

                <!-- button bar -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal">

                    <View
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/grey_10"/>

                    <androidx.appcompat.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="?android:attr/actionBarSize"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                    <ImageButton
                        android:id="@+id/button_play"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="center"
                        android:src="@drawable/ic_play_24dp"
                        android:tint="@color/colorPrimaryDark"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageButton
                        android:id="@+id/button_queuenext"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="center"
                        android:src="@drawable/ic_add_to_top_24dp"
                        android:visibility="@{episode.section == 3 ? View.VISIBLE : View.GONE}"
                        android:tint="@color/colorPrimaryDark"
                        app:layout_constraintEnd_toStartOf="@+id/button_queuelast"
                        app:layout_constraintStart_toEndOf="@+id/button_play" />

                    <ImageButton
                        android:id="@+id/button_queuelast"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="center"
                        android:src="@drawable/ic_add_to_bottom_24dp"
                        android:visibility="@{episode.section == 3 ? View.VISIBLE : View.GONE}"
                        android:tint="@color/colorPrimaryDark"
                        app:layout_constraintEnd_toStartOf="@+id/button_archive"
                        app:layout_constraintStart_toEndOf="@+id/button_queuenext" />

                    <ImageButton
                        android:id="@+id/button_archive"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="center"
                        android:src="@drawable/ic_archive_24dp"
                        android:visibility="@{episode.section != 3 ? View.VISIBLE : View.GONE}"
                        android:tint="@color/colorPrimaryDark"
                        app:layout_constraintEnd_toStartOf="@+id/button_favorite"
                        app:layout_constraintStart_toEndOf="@+id/button_queuelast" />

                    <ImageButton
                        android:id="@+id/button_favorite"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="center"
                        android:src="@{episode.isFavorite ? @drawable/ic_favorite_24dp : @drawable/ic_favorite_border_24dp}"
                        android:tint="@color/colorPrimaryDark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/button_archive" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>